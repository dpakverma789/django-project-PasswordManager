{
  "version": 2,
  "builds": [
    {
      "src": "django_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "python3.9",
        "excludeFiles": "{**/*.pyc,__pycache__/**,tests/**,docs/**,.git/**,*.md,*.sqlite3,migrations/**}"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "django_project/wsgi.py"
    }
  ]
}
